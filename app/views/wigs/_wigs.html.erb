<div id="<%= dom_id wig %>">
  <div class="container-show d-flex justify-content-between">

    <div class="col-4">
      <%= cl_image_tag wig.photo.key, height: 400, width: 300, class: "img-wig" %>
    </div>

    <div class="mid-card col-8">

      <p>
        <span class="h2"><strong><%= wig.name %></strong></span>
      </p>


      <div id="description">
        <p>
          <h4><strong>Description:</strong></h4>
        </p>
        <p>
        <%= wig.description %>
        </p>
      </div>
      <div class= "d-flex">
        <div>
          <div id="wig-type">
            <p>
              <span class="h4"><strong> Wig Type: </strong></span><%= wig.wig_type %>
            </p>
          </div>
          <div id= "wig-color">
            <p>
              <span class="h4"><strong>Color: </strong></span><%= wig.color %>
            </p>
          </div>
        </div>
        <div>
          <div>
            <p>
              <span class="h4"><strong>Wig Owner: </strong></span><%= wig.user.email %>
            </p>
          </div>
          <div>
            <p>
              <span class="h4"><strong>Price:</strong></span>
              <%= wig.price %> â‚¬
            </p>
          </div>
          <%= render "/shared/buy_button", wig: @wig, selling: @selling, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
