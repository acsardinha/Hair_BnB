<div id="<%= dom_id wig %>">
  <div class="container-show d-flex justify-content-between">

    <div class="col-4">
      <%= cl_image_tag wig.photo.key, height: 400, width: 300, crop: :fill, class: "img-wig" %>
    </div>

    <div class="mid-card col-8">
      <div id="description">
        <p>
          <h4><strong>Description:</strong></h4>
        </p>
        <p>
        <%= wig.description %>
        </p>
      </div>
      <div id="wig-type">
        <p>
          <strong>Wig Type:</strong><%= wig.wig_type %>
        </p>
      </div>
      <div id= "wig-color">
        <p>
          <strong>Color:</strong><%= wig.color %>
        </p>
      </div>
      <div>
        <p>
          <strong>Name:</strong>
          <%= wig.name %>
        </p>
      </div>
      <div>
        <p>
          <strong>Wig Owner:</strong>
          <%= wig.user.email %>
        </p>
      </div>
      <div>
        <p>
          <strong>Price:</strong>
          <%= wig.price %> â‚¬
        </p>
      </div>

      <%= render "/shared/buy_button", wig: @wig, selling: @selling, class: "btn btn-primary" %>
    </div>


    <div class="last-card">

    </div>
  </div>
</div>
